<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tomi.applock" >

    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LockerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CodeWindowActivity"
            android:label="@string/app_name2"
            android:theme="@android:style/Theme.Holo.Dialog"></activity>

        <service android:name=".AppLockerService"
            android:enabled="true">
            <intent-filter >
                <action android:name="com.example.tomi.applock.AppLockerService" />
            </intent-filter>
        </service>
        <service android:name=".RestartAppLockerService"
            android:enabled="true">
            <intent-filter >
                <action android:name="com.example.tomi.applock.RestartAppLockerService" />
            </intent-filter>
        </service>
    </application>

</manifest>
